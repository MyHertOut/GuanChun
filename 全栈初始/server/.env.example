# 基础环境变量配置

# 服务运行端口
PORT=3000

# 运行环境 (development/production/test)
NODE_ENV=development

# 数据库配置 (示例: MySQL)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=fullstack_demo
# 是否同步实体到数据库 (生产环境建议关闭)
DB_SYNCHRONIZE=true

# Redis 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 身份验证配置
# Token 秘钥，生产环境请务必修改
JWT_SECRET=your-super-secret-jwt-key
# Token 过期时间
JWT_EXPIRES_IN=7d

# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# 文件上传存储路径
UPLOAD_DIR=uploads
